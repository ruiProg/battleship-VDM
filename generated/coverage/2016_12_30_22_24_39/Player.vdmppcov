class Player
types
	public String = seq of char;

values
	private static maxLength = 256;

instance variables
	private name: String;
	private wins: nat;
	private losses: nat;
	
	inv len name < maxLength;
	
operations
	public Player: String ==> Player
			Player(nameArg) == (
				name := nameArg;
				wins := 0;
				losses := 0;
				return self
			);
			
		pure public getName : () ==> String
			getName() == return name;

end Player